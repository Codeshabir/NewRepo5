    function DeleteReedeem(id) {
        if (id > 0) {


            swal({
                title: "Are you sure?",
                text: "Do you want to delete this record !",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax(
                            {
                                url: "/DynamicPages/DeletePagePost/",
                                type: "Get",
                                dataType: "JSON",
                                data: {
                                    "id": id

                                },
                                success: function (response) {
                                    console.log(response);
                                    if (response.status) {
                                        LoadTable();
