.modal_background {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    z-index: 999;
}

.modal_content {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #FFFFFF;
    width: 400px;
    padding: 30px;
    text-align: center;
    border-radius: 5px;
    box-shadow: 0px 1px 5px rgba(0,0,0,0.3);
    z-index: 1000;
}

.modal_close {
    position: absolute;
    top: 5px;
    right: 5px;
    width: 20px;
    height: 20px;
    border: none;
    outline: none;
    background: none;
    cursor: pointer;
}

.modal_close i {
    font-size: 20px;
    color: rgba(0,0,0,0.5);
}

.modal_close:hover i {
    color: rgba(0,0,0,0.8);
}

.modal_close:before,
.modal_close:after {
    content: "";
    position: absolute;
    width: 20px;
    height: 1px;
    background: rgba(0,0,0,0.5);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.modal_close:before {
    transform: translate(-50%, -50%) rotate(-45deg);
}

.modal_close:after {
    transform: translate(-50%, -50%) rotate(45deg);
}

.modal_active {
    display: block;
}

.modal_active .modal_background {
    display: block;
}

.modal_active .modal_content {
    display: block;
}

.modal_active.modal_no_background .modal_background {
    background: none;
}

.modal_active.modal_no_background .modal_content {
    box-shadow: none;
}

.modal_active.modal_no_background .modal_close i {
    color: #000000;
}

.modal_active.modal_no_background .modal_close:before,
.modal_active.modal_no_background .modal_close:after {
    background: #000000;
}

.modal_active.modal_no_background .modal_close:hover i {
    color: #FFFFFF;
}

.modal_active.modal_no_background .modal_close:hover:before,
.modal_active.modal_no_background .modal_close:hover:after {
    background: #FFFFFF;
}

.modal_title {
    font-size: 24px;
