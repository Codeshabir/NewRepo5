<div class="super_container">
    <header class="header" style="display: none;">
        <!-- Header content -->
    </header>
    <div class="single_product">
        <div class="container-fluid" style="background-color: #fff; padding: 11px;">
            <div class="row">
                <div class="col-lg-2 order-lg-1 order-2">
                    <ul class="image_list">
                        @foreach (var image in Model.Images)
                        {
                            <li data-image="@image.ImagePath"><img src="@image.ImagePath" alt=""></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-4 order-lg-2 order-1">
                    <div class="image_selected"><img src="@Model.Images.First().ImagePath" alt=""></div>
                </div>
                <div class="col-lg-6 order-3">
                    <div class="product_description">
                        <nav>
                            <!-- Breadcrumb content -->
                        </nav>
                        <div class="product_name">@Model.Name</div>
                        <div class="product-rating">
                            <span class="badge badge-success"><i class="fa fa-star"></i> 4.5 Star</span>
                            <span class="rating-review">35 Ratings &amp; 45 Reviews</span>
                        </div>
                        <div>
                            <span class="product_price">@Model.Price</span>
                            @if (Model.Price>0)
                            {
                                <strike class="product_discount">
                                    <span style='color:black'>₹ @Model.Price</span>
                                </strike>
                            }
                        </div>
                        <hr class="singleline">
                        <div>
                            <span class="product_info"><span>@Model.Description</span></span>
                        </div>
                        <hr class="singleline">
                        <div class="order_info d-flex flex-row">
                            <!-- Order info content -->
                        </div>
                        <div class="row">
                            <div class="col-xs-6" style="margin-left: 13px;">
                                <div class="product_quantity">
                                    <span>QTY: </span>
                                    <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                                    <div class="quantity_buttons">
                                        <div class="quantity">
                                            <button class="btn btn-secondary" onclick="decreaseQuantity(@Model.Id)">-</button>
                                            <input class="form-control mx-2" type="number" min="1" max="10" value="1" id="quantity_@Model.Id">
                                            <button class="btn btn-secondary" onclick="increaseQuantity(@Model.Id)">+</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary shop-button">Add to Cart</button>
                                <button type="button" class="btn btn-success shop-button">Buy Now</button>
                                <div class="product_fav"><i class="fas fa-heart"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
